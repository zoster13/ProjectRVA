<Window x:Class="ProjectRVA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectRVA"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="label" Content="Username:" HorizontalAlignment="Left" Margin="105,115,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxUsername" HorizontalAlignment="Left" Height="23" Margin="195,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label1" Content="Password:" HorizontalAlignment="Left" Margin="105,159,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxPassword" HorizontalAlignment="Left" Height="23" Margin="195,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button" Content="Log in" HorizontalAlignment="Left" Margin="195,211,0,0" VerticalAlignment="Top" Width="75" Click="login_button"/>
        <Label x:Name="label2Error" Content="ERROR: Pogresno korisnicko ime ili lozinka" HorizontalAlignment="Left" Margin="195,250,0,0" VerticalAlignment="Top" Width="194"  FontSize="9" Foreground="Red" Visibility="Hidden" />

    </Grid>
</Window>
